{
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDatasources": ["github-actions"],
      "matchPackageNames": ["ubuntu"],
      "allowedVersions": "20.04"
    }
  ]
}